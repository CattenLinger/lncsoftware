<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!--
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.serve.static.browserCache" value="false"/>
    -->
    <package name="homepage" extends="struts-default">
        <default-action-ref name="index"/>
        <action name="index" class="cn.lncsa.actions.IndexAction" method="execute">
            <result name="success">/WEB-INF/views/index.jsp</result>
        </action>
    </package>

    <package name="article" extends="struts-default">
        <action name="articles" class="cn.lncsa.actions.ArticleAction" method="list">
            <result name="success">/WEB-INF/views/articleList.jsp</result>
        </action>

        <action name="article" class="cn.lncsa.actions.ArticleAction" method="rend">
            <result name="success">/WEB-INF/views/articleDetails.jsp</result>
        </action>

        <action name="writing" class="cn.lncsa.actions.ArticleAction" method="load">
            <result name="success">/WEB-INF/views/writeArticle.jsp</result>
            <result name="error">/WEB-INF/views/errorTemplate.jsp</result>
            <result name="login" type="redirectAction">login</result>
        </action>

        <action name="article-save" class="cn.lncsa.actions.ArticleAction" method="save">
            <result name="success" type="redirectAction">articles</result>
            <result name="new" type="redirectAction">writing</result>
            <result name="login" type="redirectAction">login</result>
            <result name="error">/WEB-INF/views/errorTemplate.jsp</result>
        </action>
    </package>

    <package name="users" extends="struts-default">
        <action name="login" class="cn.lncsa.actions.UserAction" method="login">
            <result name="success" type="redirectAction">index</result>
            <result name="login">/WEB-INF/views/sub_user/loginForm.jsp</result>
            <result name="failed">/WEB-INF/views/sub_user/loginForm.jsp</result>
        </action>

        <action name="logout" class="cn.lncsa.actions.UserAction" method="logout">
            <result name="success" type="redirectAction">index</result>
        </action>

        <action name="self" class="cn.lncsa.actions.UserAction" method="self">
            <result name="login" type="redirectAction">login</result>
            <result name="success">/WEB-INF/views/sub_user/userCenter.jsp</result>
        </action>

        <action name="registry" class="cn.lncsa.actions.UserAction" method="registry">
            <result name="form">/WEB-INF/views/sub_user/registry.jsp</result>
            <result name="success">/WEB-INF/views/sub_user/registrySuccess.jsp</result>
        </action>

        <action name="updateContact" class="cn.lncsa.actions.UserAction" method="updateContact">
            <result name="success" type="redirectAction">self</result>
            <result name="login" type="redirectAction">login</result>
        </action>

        <action name="updatePassword" class="cn.lncsa.actions.UserAction" method="updatePassword">
            <result name="success" type="redirectAction">self</result>
            <result name="login" type="redirectAction">login</result>
        </action>
    </package>

    <package name="apps" extends="struts-default">
        <action name="apps" class="cn.lncsa.actions.AppAction" method="list">
            <result name="success">/WEB-INF/views/appList.jsp</result>
        </action>
    </package>

    <package name="contact" extends="struts-default">
        <action name="contact" class="cn.lncsa.actions.ContactAction" method="list">
            <result name="success">/WEB-INF/views/contact.jsp</result>
        </action>
    </package>
</struts>